<html>

<head>

    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script type="text/javascript" src="validate.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<body>

    <section class="home">

        <% if (loginFailed) { %>
        <h1>Oops! Please try again :)</h1>
        <% } %>

        <h1>Welcome To Our Homepage</h1>

        <div id="input_errors"></div>

        <form id="form" name="login" action="/" method="POST" autocomplete="off">

            Email
            <input type='email' name='email' placeholder='Enter your email' />
            <br>
            <br>

            Password
            <input type='text' name='password' placeholder='Enter your password' />
            <br>
            <br>

            <input type="submit" value="login">
        </form>
        <br>
        <br>

        <h3 href="/signup">Or sign up below :)</h3>
        <div id="signuplink">
            <a href="/signup">Sign Up</a>
        </div>
        <br>

    </section>
    <%- include footer.ejs %>
    <script type="text/javascript">
        var validator = new FormValidator('login',
            [
                {
                    name: 'email',
                    rules: 'required|valid_email'
                }, {
                    name: 'password',
                    rules: 'required|min_length[8]'
                }
            ],
            function (errors, event) {
                if (errors.length > 0) {
                    event.preventDefault()

                    var errorString = '';
                    for (var i = 0; i < errors.length; i++) {
                        var error = errors[i]
                        for (var j = 0; j < error.messages.length; j++) {
                            errorString += error.messages[j] + '<br />';
                        }
                    }
                    $("#input_errors").html(errorString);
                }
            });

    </script>
</body>

</html>