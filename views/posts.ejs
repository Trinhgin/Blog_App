<html>

<head>

    <title>Posts</title>

</head>

<body>
        <%- include navigation.ejs %>
        <h2>All Posts</h2>
        <section id="posts">
            <% for(let i= 0; i< posts.length; i++) { %>
                <div>
                    <h2>
                        <%= posts[i].title %>
            
                    </h2>
                    <p>
                        <%= posts[i].content %>
                    </p>
                    <p><%= posts[i].user.name %></p>
        
                    <a href="/post/<%= posts[i].id %>">See comments</a>
                    <a href="/comment/<%= posts[i].id %>">Leave comments</a>
        
                </div>
                <%}%>
        </section>
    
</body>

</html>